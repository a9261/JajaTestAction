{
  "compilerOptions": {
    "incremental": false,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": ["dist", "lib", "node_modules", "**/*.test.ts"]
}
